@model MaterialManagement.BLL.ModelVM.Employee.EmployeeCreateModel

@{
    ViewData["Title"] = "إضافة موظف جديد";
}

<h1><i class="bi bi-person-plus"></i> إضافة موظف جديد</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label fw-bold"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Position" class="form-label fw-bold"></label>
                            <input asp-for="Position" class="form-control" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                             <label asp-for="Salary" class="form-label fw-bold"></label>
                            <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="HireDate" class="form-label fw-bold"></label>
                        <input asp-for="HireDate" class="form-control" type="date" />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>

                    <hr />
                    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> حفظ</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> رجوع</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}