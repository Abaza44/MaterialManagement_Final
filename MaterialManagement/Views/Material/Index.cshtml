@model IEnumerable<MaterialManagement.BLL.ModelVM.Material.MaterialViewModel>

@{
    ViewData["Title"] = "إدارة المواد";
}

<div class="container mt-4">

    <h2 class="mb-4 fw-bold text-center">📦 إدارة المواد</h2>

    <!-- ✅ رسائل التنبيه -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ✅ شريط البحث -->
    <form asp-action="Index" method="get" class="row g-2 mb-3 align-items-center">
        <div class="col-md-4">
            <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                   class="form-control" placeholder="ابحث بالاسم أو الكود..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">🔍 بحث</button>
        </div>
        <div class="col-md-6 text-md-end text-center">
            <a asp-action="Create" class="btn btn-success me-2">➕ مادة جديدة</a>
            <a asp-action="LowStock" class="btn btn-warning">⚠️ المواد منخفضة المخزون</a>
        </div>
    </form>

    <!-- ✅ جدول المواد -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>الكود</th>
                    <th>الاسم</th>
                    <th>الوحدة</th>
                    <th>الكمية</th>
                    <th>سعر الشراء</th>
                    <th>قيمة المخزون</th>
                    <th>الحالة</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td>@item.Unit</td>
                            <td>@item.Quantity</td>
                            <td>@item.PurchasePrice.ToString("N2")</td>
                            <td>@item.TotalValue.ToString("N2")</td>
                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success px-3 py-2">نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger px-3 py-2">غير نشط</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">👁</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            لا توجد مواد مسجلة حاليًا 💤
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
