@model IEnumerable<MaterialManagement.BLL.ModelVM.Expense.ExpenseViewModel>

@{
    ViewData["Title"] = "تقرير المصاريف";
}

<h1>تقرير المصاريف - @ViewBag.CurrentMonth</h1>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5 class="card-title">إجمالي مصاريف الشهر</h5>
                <!-- <<< تم الإصلاح هنا >>> -->
                <h3>@(((decimal)(ViewBag.MonthlyTotal ?? 0m)).ToString("C"))</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h5 class="card-title">إجمالي مصاريف السنة</h5>
                <!-- <<< تم الإصلاح هنا >>> -->
                <h3>@(((decimal)(ViewBag.YearlyTotal ?? 0m)).ToString("C"))</h3>
            </div>
        </div>
    </div>
</div>

<h3>توزيع المصاريف حسب الفئة</h3>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>الفئة</th>
                <th>الإجمالي</th>
                <th>النسبة المئوية</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.CategoryStats != null && ((List<object>)ViewBag.CategoryStats).Any())
            {
                // نستخدم dynamic هنا للوصول إلى الخصائص
                foreach (dynamic stat in ViewBag.CategoryStats)
                {
                    <tr>
                        <td>@stat.Category</td>
                        <td>@stat.Total.ToString("C")</td>
                        <td>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar"
                                     style="width: @stat.Percentage.ToString("F0")%;"
                                     aria-valuenow="@stat.Percentage.ToString("F0")"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @stat.Percentage.ToString("F1")%
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">لا توجد بيانات لعرضها.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h3>تفاصيل المصاريف</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>التاريخ</th>
            <th>الوصف</th>
            <th>الفئة</th>
            <th>المبلغ</th>
            <th>طريقة الدفع</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExpenseDate.ToString("dd/MM/yyyy")</td>
                <td>@item.Description</td>
                <td><span class="badge bg-info">@item.Category</span></td>
                <td>@item.Amount.ToString("C")</td>
                <td>@item.PaymentMethod</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">عرض كل المصاريف</a>
</div>