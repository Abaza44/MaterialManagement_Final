@model IEnumerable<MaterialManagement.BLL.ModelVM.Maintenance.MaintenanceRecordViewModel>

@{
    ViewData["Title"] = "كل سجلات الصيانة";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-wrench-adjustable-circle"></i> كل سجلات الصيانة</h1>
    <!-- <<< الزر الجديد هنا >>> -->
    <a asp-action="Add" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> إضافة سجل صيانة جديد
    </a>
</div>

<p>هنا يمكنك عرض جميع عمليات الصيانة التي تمت على كل المعدات.</p>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>المعدة</th>
                        <th>تاريخ الصيانة</th>
                        <th>الوصف</th>
                        <th>التكلفة</th>
                        <th>تم بواسطة</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Equipment" asp-action="Details" asp-route-code="@record.EquipmentCode">
                                    @record.EquipmentName
                                </a>
                            </td>
                            <td>@record.MaintenanceDate.ToString("yyyy-MM-dd")</td>
                            <td>@record.Description</td>
                            <td>@record.Cost.ToString("C")</td>
                            <td>@(record.PerformedBy ?? "---")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">لا توجد أي سجلات صيانة حتى الآن.</p>
        }
    </div>
</div>