@model IEnumerable<MaterialManagement.BLL.ModelVM.Invoice.ClientInvoiceSummaryViewModel>

@{
    ViewData["Title"] = "فواتير البيع حسب العميل";
}

<h2 class="mb-3">🧾 @ViewData["Title"]</h2>
<p><a asp-action="Create" class="btn btn-success">➕ إنشاء فاتورة بيع جديدة</a></p>

<div class="row">
    @foreach (var client in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">@client.ClientName</h5>
                    <p class="card-text">
                        لديه <strong>@client.InvoiceCount</strong> فاتورة. <br />
                        إجمالي المديونية: <strong class="text-danger">@client.TotalDebt.ToString("C")</strong>
                    </p>
                    <a asp-action="ClientInvoices" asp-route-id="@client.ClientId" class="btn btn-primary">
                        عرض الفواتير <i class="bi bi-arrow-left-circle"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>