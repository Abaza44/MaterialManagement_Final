@model MaterialManagement.BLL.ModelVM.Reservation.ReservationDetailsViewModel
@using MaterialManagement.DAL.Entities
@using MaterialManagement.DAL.Enums
@{
    ViewData["Title"] = "تفاصيل الحجز";
}

<div class="card shadow-sm border-0">
    <div class="card-body p-4">

        <h2 class="mb-3">تفاصيل الحجز رقم: @Model.ReservationNumber</h2>
        <hr />

        @* (التعديل 1) - إضافة زر التعديل وتنسيق الأزرار *@
        @if (Model.Status == ReservationStatus.Active)
        {
            <div class="alert alert-warning p-3">
                <h5 class="alert-heading">إجراءات الحجز</h5>
                <p>يمكنك تسليم هذا الحجز أو تعديله أو إلغاؤه.</p>
                <hr>
                <div class="d-flex justify-content-start gap-2">
                    <a asp-action="Fulfill" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="bi bi-truck"></i> تسليم جزئي / كلي
                    </a>

                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="bi bi-pencil-square"></i> تعديل الحجز
                    </a>

                    <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('هل أنت متأكد من إلغاء هذا الحجز؟')">
                        <button type="submit" class="btn btn-danger"><i class="bi bi-x-circle"></i> إلغاء الحجز</button>
                    </form>
                </div>
            </div>
        }

        <dl class="row mt-4">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ClientName)</dt>
            <dd class="col-sm-10">@Model.ClientName</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ReservationDate)</dt>
            <dd class="col-sm-10">@Model.ReservationDate.ToString("g")</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-10">@Model.Status</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TotalAmount)</dt>
            <dd class="col-sm-10">@Model.TotalAmount.ToString("C")</dd>
        </dl>

        <hr />
        <h4>الأصناف المحجوزة</h4>

        @* (التعديل 2) - تحسين جدول الأصناف لإظهار الكميات المسلمة *@
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>المادة</th>
                    <th>الكمية المحجوزة</th>
                    <th>تم تسليمه</th>
                    <th class="text-danger">المتبقي</th>
                    <th>سعر الوحدة</th>
                    <th>الإجمالي</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    var fulfilled = item.FulfilledQuantity ?? 0;
                    var remaining = item.Quantity - fulfilled;

                    <tr class="@(remaining == 0 ? "table-success text-muted" : "")">
                        <td>@item.MaterialName</td>
                        <td>@item.Quantity</td>
                        <td>@fulfilled</td>
                        <td class="fw-bold @(remaining > 0 ? "text-danger" : "")">@remaining</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@item.TotalPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />

        <div>
            <a asp-action="Index" class="btn btn-link">العودة إلى القائمة</a>
        </div>
    </div>
</div>