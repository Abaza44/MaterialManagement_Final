@model IEnumerable<MaterialManagement.BLL.ModelVM.Expense.ExpenseViewModel>

@{
    ViewData["Title"] = "إدارة المصاريف";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-cash-stack"></i> إدارة المصاريف</h1>
    <div>
        <a asp-action="Report" class="btn btn-outline-info"><i class="bi bi-file-earmark-bar-graph"></i> عرض التقرير</a>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> إضافة مصروف جديد</a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filter Card -->
<div class="card shadow-sm mb-4">
    <!-- ... (فورم الفلترة كما هو) ... -->
</div>

<!-- Expenses Table Card -->
<div class="card shadow-sm">
    <div class="card-header">
        <h5>
            قائمة المصاريف
            <span class="badge bg-danger rounded-pill">@(((decimal?)ViewBag.TotalExpenses ?? 0).ToString("C"))</span>
        </h5>
    </div>
    <div class="card-body">

        <!-- <<< تم التعديل هنا >>> -->
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="expensesTable">
                    <thead class="table-light">
                        <tr>
                            <th>التاريخ</th>
                            <th>الوصف</th>
                            <th>المبلغ</th>
                            <th>الفئة</th>
                            <th>مدفوع إلى</th>
                            <th class="text-center">العمليات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExpenseDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.Description</td>
                                <td><span class="badge bg-danger">@item.Amount.ToString("C")</span></td>
                                <td><span class="badge bg-info">@item.Category</span></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.EmployeeName))
                                    {
                                        <strong>@item.EmployeeName</strong>
                                    }
                                    else
                                    {

                                        @(item.PaymentTo ?? "---")
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="تعديل"><i class="bi bi-pencil"></i></a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد؟');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="حذف"><i class="bi bi-trash"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center p-4">
                <p class="lead text-muted">لا توجد مصاريف مسجلة لعرضها.</p>
                <a asp-action="Create" class="btn btn-primary">إضافة أول مصروف</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @if (Model != null && Model.Any())
    {
        <script>
            $(document).ready(function () {
                $('#expensesTable').DataTable({
                    "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json" },
                    "order": [[0, "desc"]]
                });
            });
        </script>
    }
}