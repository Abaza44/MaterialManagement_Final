@model IEnumerable<MaterialManagement.BLL.ModelVM.Equipment.EquipmentViewModel>

@{
    ViewData["Title"] = "تقرير المعدات";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-file-earmark-text"></i> تقرير المعدات</h1>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> العودة للقائمة</a>
</div>
<hr />

<!-- Report Summary -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center shadow">
            <div class="card-body">
                <i class="bi bi-tools fs-1"></i>
                <h5 class="card-title mt-2">إجمالي عدد المعدات</h5>
                <p class="card-text display-4 fw-bold">@(Model?.Count() ?? 0)</p>
            </div>
        </div>
    </div>
</div>


<!-- Full Equipment List -->
<div class="card shadow-sm">
    <div class="card-header">
        <h5>قائمة تفصيلية بجميع المعدات</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>الاسم</th>
                            <th>تاريخ الشراء</th>
                            <th>تاريخ آخر صيانة</th>
                            <th>تاريخ الصيانة القادم</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.PurchaseDate.ToString("yyyy-MM-dd")</td>
                                <td>@(item.LastMaintenanceDate.HasValue? item.LastMaintenanceDate.Value.ToString("yyyy-MM-dd") : "---")</td>
                                <td>@(item.NextMaintenanceDate.HasValue? item.NextMaintenanceDate.Value.ToString("yyyy-MM-dd") : "---")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center p-4">
                <p class="lead">لا توجد بيانات لعرضها في التقرير.</p>
            </div>
        }
    </div>
</div>