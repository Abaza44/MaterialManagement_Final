@model IEnumerable<MaterialManagement.BLL.ModelVM.Invoice.SupplierInvoiceSummaryViewModel>

@{
    ViewData["Title"] = "فواتير الشراء حسب المورد";
}

<h2 class="mb-3">🧾 @ViewData["Title"]</h2>
<p><a asp-action="Create" class="btn btn-success">➕ إنشاء فاتورة شراء جديدة</a></p>

<div class="row">
    @foreach (var supplier in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@supplier.SupplierName</h5>
                    <p class="card-text">
                        لديه <strong>@supplier.InvoiceCount</strong> فاتورة. <br />
                        إجمالي المستحقات: <strong class="text-success">@supplier.TotalCredit.ToString("C")</strong>
                    </p>
                    <a asp-action="SupplierInvoices" asp-route-id="@supplier.SupplierId" class="btn btn-primary mt-auto">
                        عرض الفواتير <i class="bi bi-arrow-left-circle"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>