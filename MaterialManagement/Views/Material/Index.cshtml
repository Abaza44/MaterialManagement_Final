@model IEnumerable<MaterialManagement.BLL.ModelVM.Material.MaterialViewModel>

@{
    ViewData["Title"] = "إدارة المواد";
}

<div class="container mt-4">

    <h2 class="mb-4 fw-bold text-center">📦 إدارة المواد</h2>

    <!-- ✅ رسائل التنبيه -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ✅ شريط البحث -->
    <form asp-action="Index" method="get" class="row g-2 mb-3 align-items-center">
        <div class="col-md-4">
            <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                   class="form-control" placeholder="ابحث بالاسم أو الكود..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">🔍 بحث</button>
        </div>
        <div class="col-md-6 text-md-end text-center">
            <a asp-action="Create" class="btn btn-success me-2">➕ مادة جديدة</a>
            <a asp-action="LowStock" class="btn btn-warning">⚠️ المواد منخفضة المخزون</a>
        </div>
    </form>

    <!-- ✅ جدول المواد -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>الاسم</th>
                    <th>الكمية بالمخزن</th>
                    <th>الكمية المحجوزة</th>
                    <th>الكمية المتاحة</th>
                    <th>سعر البيع</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.ReservedQuantity</td>

                            <td>
                                @if (item.AvailableQuantity < 0)
                                {
                                    <span class="text-danger fw-bold">@item.AvailableQuantity</span>
                                }
                                else
                                {
                                    <span>@item.AvailableQuantity</span>
                                }
                            </td>

                            <td>@item.SellingPrice</td>
                            <td>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            لا توجد مواد مسجلة حاليًا 💤
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
