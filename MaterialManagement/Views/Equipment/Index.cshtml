@model IEnumerable<MaterialManagement.BLL.ModelVM.Equipment.EquipmentViewModel>

@{
    ViewData["Title"] = "إدارة المعدات";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-tools"></i> إدارة المعدات</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> إضافة معدة جديدة
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">قائمة المعدات (@Model.Count())</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>الكود</th>
                            <th>الاسم</th>
                            <th>تاريخ الشراء</th>
                            <th>آخر صيانة</th>
                            <th>الصيانة القادمة</th>
                            <th class="text-center">العمليات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><code>@item.Code</code></td>
                                <td><strong>@item.Name</strong></td>
                                <td>@item.PurchaseDate.ToString("yyyy-MM-dd")</td>
                                <td>@(item.LastMaintenanceDate.HasValue? item.LastMaintenanceDate.Value.ToString("yyyy-MM-dd") : "---")</td>
                                <td>@(item.NextMaintenanceDate.HasValue? item.NextMaintenanceDate.Value.ToString("yyyy-MM-dd") : "---")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-code="@item.Code" class="btn btn-outline-info" title="تفاصيل"><i class="bi bi-eye"></i></a>
                                        <a asp-action="Edit" asp-route-code="@item.Code" class="btn btn-outline-warning" title="تعديل"><i class="bi bi-pencil"></i></a>
                                        <a asp-action="Delete" asp-route-code="@item.Code" class="btn btn-outline-danger" title="حذف"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center p-4">
                <p class="lead">لا توجد معدات مسجلة.</p>
                <a asp-action="Create" class="btn btn-primary mt-2"><i class="bi bi-plus-lg"></i> إضافة أول معدة</a>
            </div>
        }
    </div>
</div>