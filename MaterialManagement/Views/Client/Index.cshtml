@model IEnumerable<MaterialManagement.BLL.ModelVM.Client.ClientViewModel>

@{
    ViewData["Title"] = "العملاء";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<div class="container mt-4">
    <h2 class="mb-3">👥 إدارة العملاء</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">➕ إضافة عميل جديد</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>الاسم</th>
                <th>الهاتف</th>
                <th>العنوان</th>
                <th>الرصيد</th>
                <th>الحالة</th>
                <th>إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var client in Model)
                {
                    <tr>
                        <td>@client.Name</td>
                        <td>@client.Phone</td>
                        <td>@client.Address</td>
                        <td>@client.Balance</td>
                        <td>
                            @if (client.IsActive)
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غير نشط</span>
                            }
                            @if (!client.IsActive)
                            {
                                <a asp-action="Reactivate" asp-route-id="@client.Id" class="btn btn-success btn-sm">🔄 تفعيل</a>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-info btn-sm">👁 تفاصيل</a>
                            <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-warning btn-sm">✏️ تعديل</a>
                            <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-danger btn-sm">🗑 حذف</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">لا يوجد عملاء</td>
                </tr>
            }
        </tbody>
    </table>
</div>