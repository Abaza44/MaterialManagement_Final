@model MaterialManagement.BLL.ModelVM.Invoice.PurchaseInvoiceDetailsViewModel

@{
    ViewData["Title"] = $"تفاصيل الفاتورة #{Model.Invoice.InvoiceNumber}";
    // يتم حساب هذا المبلغ هنا لأن الـ ViewModel يحتوي على القائمة
    var totalPaymentsOnInvoice = Model.Payments.Sum(p => p.Amount);
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-receipt-cutoff"></i> تفاصيل الفاتورة: <code>@Model.Invoice.InvoiceNumber</code></h1>
    <div>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-list-ul"></i> العودة للقائمة</a>
        <button onclick="window.print()" class="btn btn-primary"><i class="bi bi-printer"></i> طباعة</button>
    </div>
</div>
<hr />

<div class="card shadow-sm mb-4">
    <div class="card-header bg-light"><h5 class="mb-0">ملخص الفاتورة</h5></div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">المورد</dt>
                    <dd class="col-sm-8">
                        @if (Model.Invoice.SupplierId.HasValue)
                        {
                            <a asp-controller="Supplier" asp-action="Details" asp-route-id="@Model.Invoice.SupplierId">@Model.Invoice.SupplierName</a>
                        }
                        else
                        {
                            <span>---</span>
                        }
                    </dd>

                    <dt class="col-sm-4">تاريخ الفاتورة</dt>
                    <dd class="col-sm-8">@Model.Invoice.InvoiceDate.ToString("D")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">الإجمالي</dt>
                    <dd class="col-sm-8 fw-bold">@Model.Invoice.TotalAmount.ToString("C")</dd>

                    <dt class="col-sm-4 text-success">المدفوع</dt>
                    <dd class="col-sm-8 text-success fw-bold">@Model.Invoice.PaidAmount.ToString("C")</dd>

                    <dt class="col-sm-4 text-danger">المتبقي</dt>
                    <dd class="col-sm-8 text-danger fw-bold">@Model.Invoice.RemainingAmount.ToString("C")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header"><h5 class="mb-0"><i class="bi bi-box-seam"></i> بنود الفاتورة</h5></div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-light">
                <tr><th>الكود</th><th>المادة</th><th class="text-center">الكمية</th><th class="text-end">سعر الوحدة</th><th class="text-end">الإجمالي</th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Invoice.Items)
                {
                    <tr>
                        <td>@item.MaterialCode</td>
                        <td>@item.MaterialName</td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                        <td class="text-end">@item.TotalPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-cash-stack"></i> سجل الدفعات للمورد</h5>
        @if (Model.Invoice.RemainingAmount > 0 && Model.Invoice.SupplierId.HasValue)
        {
            <a asp-controller="Payment" asp-action="AddSupplierPayment" asp-route-supplierId="@Model.Invoice.SupplierId" asp-route-invoiceId="@Model.Invoice.Id" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> إضافة دفعة
            </a>
        }
    </div>
    <div class="card-body">
        @if (Model.Payments != null && Model.Payments.Any())
        {
            <table class="table table-sm">
                <thead>
                    <tr><th>تاريخ الدفعة</th><th>المبلغ</th><th>طريقة الدفع</th><th>ملاحظات</th></tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model.Payments)
                    {
                        <tr>
                            <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
                            <td>@payment.Amount.ToString("C")</td>
                            <td>@payment.PaymentMethod</td>
                            <td>@(payment.Notes ?? "---")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="fw-bold table-light">
                        <td class="text-end">إجمالي الدفعات المسجلة على الفاتورة:</td>
                        <td colspan="3">@totalPaymentsOnInvoice.ToString("C")</td>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <p class="text-center text-muted">لا توجد دفعات مسجلة لهذه الفاتورة بعد.</p>
        }
    </div>
</div>