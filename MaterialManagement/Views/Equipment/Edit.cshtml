@model MaterialManagement.BLL.ModelVM.Equipment.EquipmentUpdateModel

@{
    ViewData["Title"] = "تعديل بيانات المعدة";
}

<h1><i class="bi bi-pencil-square"></i> تعديل: @Model.Name</h1>
<hr />

<div class="row">
    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Code" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">الكود</label>
                        <input asp-for="Code" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PurchaseDate" class="form-label fw-bold"></label>
                        <input asp-for="PurchaseDate" class="form-control" type="date" />
                        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastMaintenanceDate" class="form-label fw-bold"></label>
                            <input asp-for="LastMaintenanceDate" class="form-control" type="date" />
                            <span asp-validation-for="LastMaintenanceDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NextMaintenanceDate" class="form-label fw-bold"></label>
                            <input asp-for="NextMaintenanceDate" class="form-control" type="date" />
                            <span asp-validation-for="NextMaintenanceDate" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> حفظ التعديلات</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> إلغاء</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}