@model IEnumerable<MaterialManagement.BLL.ModelVM.Invoice.PurchaseInvoiceViewModel>

@{
    ViewData["Title"] = "فواتير الشراء";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="container mt-4">
    <h2 class="mb-3">🧾 فواتير الشراء</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">➕ إنشاء فاتورة شراء جديدة</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>رقم الفاتورة</th>
                <th>التاريخ</th>
                <th>المورد</th>
                <th>الإجمالي</th>
                <th>المدفوع</th>
                <th>المتبقي</th>
                <th>إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var invoice in Model)
                {
                    <tr>
                        <td>@invoice.InvoiceNumber</td>
                        <td>@invoice.InvoiceDate.ToShortDateString()</td>
                        <td>@invoice.SupplierName</td>
                        <td>@string.Format("{0:N2}", invoice.TotalAmount)</td>
                        <td>@string.Format("{0:N2}", invoice.PaidAmount)</td>
                        <td>
                            @if (invoice.RemainingAmount > 0)
                            {
                                <span class="badge bg-danger">@string.Format("{0:N2}", invoice.RemainingAmount)</span>
                            }
                            else
                            {
                                <span class="badge bg-success">✔ مسدد كامل</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-info btn-sm">👁 تفاصيل</a>
                            <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-warning btn-sm">✏️ تعديل</a>
                            <a asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-danger btn-sm">🗑 حذف</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">
                        <div class="alert alert-warning m-0 text-center">⚠️ لا توجد فواتير شراء</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>